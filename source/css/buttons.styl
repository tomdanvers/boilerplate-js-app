button.active, button:active, .button:active {
    background-color: rgb(55, 167, 255);
    border: solid 1px #FFF;
    color: #fff;
}

select:focus, input:focus, button:focus, .button:focus {
    outline:none;
    box-shadow: 0px 0px 2pt 2pt rgba(55, 167, 255,.25);
}



.button-alert:hover {
    background-color: #AA0000;
}

.button-alert:active {
    background-color: #AA0000;
}

.button-alert:focus {
    box-shadow: 0px 0px 2pt 2pt rgba(175,0,0,.25);
}

button:disabled, .button:disabled {
    &:hover{
        border: solid 1px #D3D3D3;
        background-color: inherit;
        color: inherit;
    }
    &:focus {
        box-shadow: none;
    }
}