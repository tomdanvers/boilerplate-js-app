button, .button {
    background-color: #F0F0F0;
    border: solid 1px #D3D3D3;
    border-radius: 5px;
    color: rgb(160, 160, 160);
    font: inherit;
    padding: 5px;
    text-decoration: none;
    text-transform: uppercase;
    vertical-align: middle;
    width: 100%;
    user-select: none;
    -webkit-user-select: none;

}

